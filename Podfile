  pod 'RxOptional', '~> 3.1'

  target 'Twinkly ListTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'RxTest', '~> 3.1'
    pod 'RxExpect', '~> 0.3'
    pod 'RxOptional', '~> 3.1'
  end

  target 'Twinkly ListUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
